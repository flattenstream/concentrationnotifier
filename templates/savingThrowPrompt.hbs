<div class="concentrationnotifier">
  <div class="card-contents prompt-card">
    <div class="header">{{localize "DND5E.Concentration"}}</div>
    <div class="details">{{{ifThen description description details}}}</div>
    <div class="buttons">
      <button data-prompt="save" data-target="{{dc}}" data-ability="{{ability}}" data-uuid="{{actorUuid}}">
        <i class="fa-solid fa-dice-d20"></i> {{buttonSaveLabel}}
      </button>
      <button data-prompt="end" data-uuid="{{effectUuid}}">
        <i class="fa-solid fa-circle-dot"></i> {{localize "CN.ButtonEndConcentration"}}
      </button>
      {{#if hasTemplates}}
      <button data-prompt="templates" data-origin="{{origin}}">
        <i class="fa-solid fa-ruler-combined"></i> {{localize "CN.ButtonRemoveTemplates"}}
      </button>
      {{/if}}
    </div>
  </div>
</div>
